.city_box{ 
    height:100%; 
  background:#f1f5f8;
  display: flex; 
  color:#131313;
  padding-top:20rpx;
  box-sizing: border-box;
}
.city_left{
  flex: 1;
}
.city_right{
  width: 60rpx;
  height:70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.letter_item{
  flex: 1;
  display: block;
  font-size: 24rpx;  
  text-align: center;
}



.city_first_letter{
  line-height: 40rpx;
  height: 40rpx;
  padding-left: 25rpx;
  font-size: 28rpx;
  font-weight:600;
  /* background: #eee; */
}
.city_name{
  display: block;
  line-height: 80rpx;
  height: 80rpx;
  /* border-bottom: 1px solid #efefef; */
  font-size: 28rpx; 
  padding-left: 25rpx;
}
